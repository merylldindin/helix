{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "strict",
  "insertPragma": false,
  "jsxSingleQuote": true,
  "overrides": [
    {
      "files": ".claude/**/*.md",
      "options": {
        "embeddedLanguageFormatting": "off"
      }
    }
  ],
  "plugins": ["prettier-plugin-packagejson", "prettier-plugin-toml"],
  "printWidth": 88,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "vueIndentScriptAndStyle": false
}
